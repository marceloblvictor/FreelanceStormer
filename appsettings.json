{
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "RestaurantSchedulerDbContext": "Server=(localdb)\\mssqllocaldb;Database=RestaurantSchedulerDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning"
      }
    },
   
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/webapi-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {EventType:x8} {Level:u3}] {Username} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
